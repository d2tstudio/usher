    .navbar
      nav.navbar.navbar-default
        .container-fluid
          // Brand and toggle get grouped for better mobile display
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navCollapse', aria-expanded='false')
              span.sr-only Toggle navigation
              |         
              span.icon-bar
              |         
              span.icon-bar
              |         
              span.icon-bar
            |       
            a.navbar-brand(href='/')
              if currentUser
                img.avatar.img-circle(src="{{services.dribbble.avatar}}")
              else
                img.logo(src="images/logo.svg") 
            if currentUser
              p.navbar-text #{profile.name}
            else
              p.navbar-text Monospace Gallery

          // Collect the nav links, forms, and other content for toggling
          #navCollapse.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right              
              li
                a.menu.btn.btn-link(href="{{pathFor 'About'}}") About
