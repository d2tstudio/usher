template(name="portfolio")
  .portfolio.container-fluid
    .row
      each shots
        .col-md-4.col
          .shot
            .label
              article.shot-description
                li #{title}
                li.likes #{likes_count}
                  span.fa.fa-heart
            .shoterlay
              article.shot-description
                h1 #{title}
                | #{description}
                .likes
                  ul
                    li #{likes_count} liked
                    li #{views_count} View

            img(src="#{images.normal}")
