/* portfolio */
.col
  padding 0px

.shot
  padding 0px
  position relative

  img
    width 100%

  .label
    display none
    position absolute
    bottom 30px
    padding 0px
    .shot-description
      li
        font-size 12px
        font-weight 600
        text-transform uppercase
        background-color $dribbble-grey
        padding 1em
        opacity 0.95
        float left
        list-style none
        &.likes
          background-color white
          color $brand-primary
          span.fa
            margin-left 5px

  .shoterlay
    height 100%
    width 100%
    background-color $gray-darker
    opacity 0
    position absolute
    overflow auto
    .shot-description
      padding 5px 25px
      a
        color white
      h1
        font-size 22px
        font-weight 300
        letter-spacing -1px
        clear both
      ul
        list-style none
        margin-left 0em
        padding-left 0em
        li
          float left
          margin-right 1em
          padding 1em 0em
          &.fa
            margin-right 10px
            padding-right 10px
            span
              padding-left 10px
    &:hover
      display block
      opacity 0.95

.shot-description
  color white
  h1
    margin-bottom 0.5em
    color white
  p
    font-weight 400
    font-size 13px

.lightbox
  a
    display block
