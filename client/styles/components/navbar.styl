/*

Navbar

*/

.navbar
  background transparent
  border none
  -webkit-box-shadow none
  box-shadow none

  .navbar-nav
    li >
      a:hover,
      a:active,
      a:focus
        background none

img.logo
  height 40px
  width 40px

.navbar-form
  border 0px
  box-shadow none

.navbar-brand
  padding 15px
  .avatar
    height 30px
    width 30px

@media (min-width: 768px)
  .navbar-brand
    padding-right 0px
