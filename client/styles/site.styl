/*  SITE
-------- */
html, body
  height 100%

*
  transition all 0.2s ease

/* Site */
body
  padding 0px

a
  color black

h1
  font-weight 300

h5
  margin-top 1em

ul
  li
    list-style none

dt
  margin-top 20px

p
  a
    border-bottom 1px dotted grey


.overlay
  position absolute
  width 100%
  height 100%
  opacity 0.8


/* FEATURES */
.features
  text-align center

@media (max-width: $screen-xs-max)
  #Home .bg
    opacity 0.3

  #login-buttons
    margin 0px 10px

  .footer
    width 100%
    margin 0 auto

