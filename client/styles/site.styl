.modal-dialog
  width 100% !important
  height 100%
  background white

.jumbotron
  text-align center
  h1
    font-size 3em
  p
    font-size 18px
    line-height 22px

/* HOME */
.home
  .signup
    padding 50px 0px
  #login-buttons
    margin 30px
  .directory-grid
    position fixed
    bottom 10px
    left 10px
    .avatar
      height 20px
      width 20px
    p
      display none

/* ABOUT */
.about
  h1
    line-height 1.5em
  em
    border-bottom 5px solid #DDDBC4
    font-style normal
