/*

Usher

*/

/* Variables */

/* Dribbble */
$dribbble-pink  = #ea4c89
$dribbble-green = #8aba56
$dribbble-grey  = #333333

$lighten-amount = 20%


/* FONTS */
@import url("http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900");

@import "variables.styl"
@import "../../.meteor/local/build/programs/web.browser/packages/innovae_bootstrap-stylus/bootstrap/index.styl"

/*
Mixins
*/

dark()
  background-color $gray-dark
  border-color $gray-dark
  color white

light()
  background-color #fcfcfc
  color $gray-dark

primary()
.primary
  background-color $brand-primary
  color white

.centered
  text-align center

/* TYPOGRAPHY */
smallcaps()
  text-transform uppercase
  font-size 11px
  letter-spacing 2px

html, body
  height 100%

*
  transition all 0.2s ease

i
  color white

/* Site */
body
  dark()

/* Header */
.header
  padding 10px 0px

.navbar-brand
  i:before
    margin-right 5px

/* User */
.user
  text-align center
  margin-bottom 90px

  .avatar
    img
      max-height 80px

  h1
    font-size 30px
    font-weight 300
    margin-bottom 0px

  p
    font-size 14px
    color $gray-light
    margin-top 4px
    margin-bottom 20px

/* Login */
#login-buttons
  .login-button
    background-color $brand-primary
    font-size 90%
    border 0px
    padding 10px 15px
    &:hover
      background-color saturate($brand-primary, $lighten-amount)

  .login-display-name
    display none


/* Components */
.navbar
  background transparent
  border none

.navbar-form
  border 0px
  box-shadow none

.bg
  height 100%
  width 100%
  background-image url('../images/mast.jpg')
  background-size cover
  background-position center top
  position fixed
  z-index -500
  opacity 0.05

/* portfolio */
.col
  padding 0px

.shot
  padding 0px
  position relative

  img
    width 100%

  .label
    display none
    position absolute
    bottom 30px
    padding 0px
    .shot-description
      li
        font-size 12px
        font-weight 600
        text-transform uppercase
        background-color $brand-primary
        padding 1em
        opacity 0.95
        float left
        list-style none
        &.likes
          background-color white
          color $brand-primary
          span.fa
            margin-left 5px

  .shoterlay

    height 100%
    width 100%
    background-color $gray-darker
    opacity 0
    position absolute
    .shot-description
      padding 20px 40px
      h1
        font-size 36px
        font-weight 300
        letter-spacing -1px
        clear both
      ul
        list-style none
        margin-left 0em
        padding-left 0em
        li
          float left
          margin-right 1em
          padding 1em 0em
          &.fa
            margin-right 10px
            padding-right 10px
            span
              padding-left 10px
    &:hover
      display block
      opacity 0.95

.shot-description
  color white
  h1
    margin-bottom 0.5em
  p
    font-weight 400

/* Sign up */
.signup
  .welcome
    text-align center
    h1
      font-size: 36px;
      font-weight: 300;
      text-transform: uppercase;
      letter-spacing: 10px;
      margin 60px 20px 15px
    p.lead
      font-size: 12px;
      font-weight: 400;
      text-transform: uppercase;
      letter-spacing: 5px;
      opacity 0.6
    #login-buttons
      margin 2em

.section-header
  text-align center
  padding 50px 0px

/* Footer */
.footer
  position absolute
  width 100%
  bottom 10px
  padding 0px 20px
  smallcaps()
  p
    margin 0px
    float left

  .directory-grid
    float right
    img
      width 20px
      height 20px
      margin 2px

/* DIRECTORY */
.directory-grid
  img
    width 60px
    height 60px
    margin 5px

.overlay
  position absolute
  width 100%
  height 100%
  opacity 0.8

#Home .bg
  opacity 1

/* Modals */
.modal-dialog
  .modal-content
    text-align center
    box-shadow none
    border-radius 0px
    border: 20px solid rgba(0,0,0,0.2)
    opacity 0.98
    h1
      font-weight 300
      color $gray
    h5
      smallcaps()
      color $gray-dark
      font-weight 800
    p
      color #999
    .row
      margin-bottom 40px
  .modal-header
    p
      smallcaps()


/* FORMS */
outline()
  background-color transparent
  border 2px solid $gray-light
  border-radius 5px
  padding 1em

input, button,
.btn
  smallcaps()
  padding 1em 2em


/* Mailchimp */
#SubscribeForm
  input, button
    outline()
    dark()
  input
    width 150px
  button
    background-color $brand-primary
    border-color $brand-primary
    &:hover
      background-color saturate($brand-primary,$lighten-amount)
      border-color saturate($brand-primary,$lighten-amount)

  .message
    smallcaps()

@media (max-width: $screen-xs-max)
  #Home .bg
    opacity 0.3

  #login-buttons
    margin 0px 10px

  .footer
    width 100%
    margin 0 auto

  .signup
    .welcome
      text-align left
      h1
      p.lead
        letter-spacing 3px
        margin-left 0px
