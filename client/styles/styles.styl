/*  VARIABLES
----------- */
/* Dribbble Palette */
$dribbble-pink  = #ea4c89
$dribbble-green = #8aba56
$dribbble-grey  = #333333

$lighten-amount = 20%

/* FONTS */
@import url("http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900");

/* BOOTSTRAP */
@import "variables.styl"
@import "../../.meteor/local/build/programs/web.browser/packages/innovae_bootstrap-stylus/bootstrap"


/*  BASE STYLES & MIXINS
------------------------ */
@import "mixins.styl"
@import "typography.styl"


/*  COMPONENTS
-------------- */
@import "components/buttons.styl"
@import "components/forms.styl"
@import "components/portfolio.styl"
@import "components/signup.styl"
@import "components/navbar.styl"
@import "components/footer.styl"
@import "components/user.styl"
@import "components/modals.styl"
@import "components/mailchimp.styl"

/*  SITE
-------- */
html, body
  height 100%

*
  transition all 0.2s ease

/* Site */
body
  padding 0px

/* Header */
.header
  padding 10px 0px

.navbar-brand
  i:before
    margin-right 5px

.bg
  height 100%
  width 100%
  background-image url('../images/mast.jpg')
  background-size cover
  background-position center top
  position fixed
  z-index -500
  opacity 0.05

/* DIRECTORY */
.directory-grid
  img
    width 60px
    height 60px
    margin 5px

.overlay
  position absolute
  width 100%
  height 100%
  opacity 0.8

#Home .bg
  opacity 1



@media (max-width: $screen-xs-max)
  #Home .bg
    opacity 0.3

  #login-buttons
    margin 0px 10px

  .footer
    width 100%
    margin 0 auto

  .signup
    .welcome
      text-align left
      h1
      p.lead
        letter-spacing 3px
        margin-left 0px
