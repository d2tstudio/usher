/*

Usher

*/

$font-family-sans-serif   ?= 'Lato', sans-serif
$brand-primary            ?= #ea4c89

/* Dribbble */
$dribbble-pink  = #ea4c89
$dribbble-green = #8aba56
$dribbble-grey  = #333333

/* Variables */
$lighten-amount = 10%

@import url("http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900");
@import '../../.meteor/local/build/programs/web.browser/packages/innovae_bootstrap-stylus/bootstrap/index.styl'

/*
Mixins
*/

dark()
  background-color $gray-dark
  color white

light()
  background-color #fcfcfc
  color $gray-dark

primary()
.primary
  background-color $brand-primary
  color white

.centered
  text-align center

html, body
  height 100%

*
  transition all 0.2s ease

i
  color white

/* Site */
body
  dark()

/* Header */
.header
  padding 10px 0px

/* User */
.user
  text-align center
  margin-bottom 90px

  .avatar
    img
      max-height 80px

  h1
    font-size 30px
    font-weight 300
    margin-bottom 0px

  p
    font-size 14px
    color $gray-light
    margin-top 4px
    margin-bottom 20px

/* Login */
#login-buttons
  .login-button
    background-color $dribbble-pink
    font-size 90%
    border 0px
    padding 10px 15px
    &:hover
      background-color saturate($dribbble-pink, $lighten-amount)

  .login-display-name
    display none


/* Components */
.navbar
  background transparent
  border none

.bg
  height 100%
  width 100%
  background-image url('../images/bg.jpg')
  background-size cover
  position fixed
  z-index -500
  opacity 0.05

/* portfolio */
.col
  padding 0px

.shot
  padding 0px
  position relative

  img
    width 100%

  .label
    display none
    position absolute
    bottom 30px
    padding 0px
    .shot-description
      li
        font-size 12px
        font-weight 600
        text-transform uppercase
        background-color $brand-primary
        padding 1em
        opacity 0.95
        float left
        list-style none
        &.likes
          background-color white
          color $brand-primary
          span.fa
            margin-left 5px

  .shoterlay
    display none
    height 100%
    width 100%
    background-color $brand-primary
    opacity 0
    position absolute
    .shot-description

      padding 20px 40px
      h1
        font-size 36px
        font-weight 300
        letter-spacing -1px
    &:hover
      display block
      opacity 0.95

.shot-description
  color white
  h1
    margin-bottom 0.5em
  p
    font-weight 400

/* Sign up */
.signup
  .welcome
    padding 0px 0px 100px
    text-align center
    h1
      font-size 72px
      font-weight 300
      margin-top 1em
    #login-buttons
      margin 2em

.section-header
  text-align center
  padding 50px 0px

/* Footer */
.footer
  padding 50px 0px
  text-align center


/* DIRECTORY */
.directoryGrid
  position relative
  img
    width 60px
    height 60px
    margin 5px

.overlay
  position absolute
  width 100%
  height 100%
  opacity 0.8

.branding
  padding 50px 0px
